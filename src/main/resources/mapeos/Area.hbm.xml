<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.grupo25.datos">
    <class name="Area" table="areas">
        <id name="id" column="id" type="int">
            <generator class="identity"/>
        </id>
        <property name="nombre" column="nombre" type="string"/>
        <list name="tecnicos" table="tecnicos" cascade="all">
            <key column="area_id"/>
            <list-index column="orden" />
            <one-to-many class="com.grupo25.datos.Tecnico"/>
        </list>
        <property name="createAt" column="create_at_area" type="timestamp"/>
        <property name="updateAt" column="update_at_area" type="timestamp"/>
    </class>
</hibernate-mapping> 